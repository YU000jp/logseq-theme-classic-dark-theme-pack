{
    "name": "logseq-theme-template",
    "description": "A template for Logseq theme for use Settings Schema",
    "repository": "https://github.com/YU000jp/logseq-theme-template.git",
    "author": "YU000jp",
    "license": "MIT",
    "logseq": {
        "id": "theme-template",
        "title": "Theme Template",
        "icon": "./icon.svg",
        "main": "./dist/index.html",
        "themes": [
            {
                "name": "Navy Dark Theme",
                "url": "./src/css/navy.css",
                "description": "Simple dark theme",
                "mode": "dark"
            },
            {
                "name": "Orange Dark Theme",
                "url": "./src/css/orange.css",
                "description": "Simple dark theme",
                "mode": "dark"
            },
            {
                "name": "Green Dark Theme",
                "url": "./src/css/green.css",
                "description": "Simple dark theme",
                "mode": "dark"
            },
            {
                "name": "Purple Dark Theme",
                "url": "./src/css/purple.css",
                "description": "Simple dark theme",
                "mode": "dark"
            },
            {
                "name": "White Dark Theme",
                "url": "./src/css/white.css",
                "description": "Simple dark theme",
                "mode": "dark"
            }
        ]
    },
    "theme": true,
    "effect": true,
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build --mode=dev",
        "prod": "vite build"
    },
    "dependencies": {
        "@logseq/libs": "^0.0.15"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^20.4.4",
        "conventional-changelog-conventionalcommits": "^5.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "jest": "^29.6.1",
        "npx": "^10.2.2",
        "rollup-plugin-string": "^3.0.0",
        "semantic-release": "^21.0.7",
        "typescript": "^5.1.6",
        "vite": "^4.4.7",
        "vite-plugin-logseq": "^1.1.2"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}